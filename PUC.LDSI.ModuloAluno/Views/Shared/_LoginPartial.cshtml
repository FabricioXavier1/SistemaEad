@using Microsoft.AspNetCore.Identity
@using PUC.LDSI.Domain.Entities
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/Home/Index" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <span style="display:block;padding:15px 15px 15px 15px;color:#337ab7;">@UserManager.GetUserAsync(User).Result.Nome</span>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Sair</button>
            </li>
        </ul>
    </form>
}
else
{
    <div style="float:right !important;margin-right:-15px;">
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-link navbar-btn navbar-link">Registrar</a>
        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-link navbar-btn navbar-link">Entrar</a>
    </div>
}
