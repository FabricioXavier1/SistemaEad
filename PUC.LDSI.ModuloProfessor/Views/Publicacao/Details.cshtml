@model PUC.LDSI.Domain.Entities.Publicacao

@{
    ViewData["Title"] = "Publicação";
}

<h2>@ViewData["Title"]</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Avaliação
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Avaliacao.Disciplina) -
            @Html.DisplayFor(model => model.Avaliacao.Materia) -
            @Html.DisplayFor(model => model.Avaliacao.Descricao)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Turma)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Turma.Id)
        </dd>
        <dt>
            Publicado em
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataPublicacao)
        </dd>
        <dt>
            Início
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataInicio)
        </dd>
        <dt>
            Fim
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataFim)
        </dd>
        <dt>
            Valor da prova
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ValorProva)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-default">Editar</a>
    <a asp-action="Index" class="btn btn-default">Retornar</a>
</div>
